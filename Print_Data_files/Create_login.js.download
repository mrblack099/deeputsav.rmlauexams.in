                foo.id = id;
            }
            $.ajax({
                type: "POST",
                url: "/DeepUtsav/Create_Login_Save",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(foo),
                dataType: "json",

                beforeSend: function () {
                    debugger;
                },


                success: function (obj) {
                    debugger;
                    var list = (obj)
                    if (list.Table.length > 0) {
                        alert("Data Submitted Succesfully ");
